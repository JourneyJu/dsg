# ============================================================================
# DSG (Data Semantic Governance) - Docker Environment Variables
# ============================================================================
# Copy this file to .env and customize the values for your environment
# cp .env.example .env

# ============================================================================
# Database Configuration (MariaDB/MySQL)
# ============================================================================
MYSQL_ROOT_PASSWORD=root123
MYSQL_USER=dsg
MYSQL_PASSWORD=dsg123
MYSQL_DATABASE=dsg
DB_TYPE=mysql
DB_HOST=mariadb
DB_PORT=3306
DB_USERNAME=${MYSQL_USER}
DB_PASSWORD=${MYSQL_PASSWORD}
DB_NAME=${MYSQL_DATABASE}

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CONNECT_TYPE=direct

# ============================================================================
# Kafka Configuration (SASL/PLAIN)
# ============================================================================
KAFKA_HOST=kafka
KAFKA_PORT=9092
KAFKA_URI=kafka:9092
KAFKA_USERNAME=admin
KAFKA_PASSWORD=admin123
KAFKA_MECHANISM=PLAIN
KAFKA_VERSION=2.3.1
KAFKA_MQ_HOST=kafka:9092
KAFKA_MQ_USENAME=${KAFKA_USERNAME}
KAFKA_MQ_PASSWORD=${KAFKA_PASSWORD}

# ============================================================================
# OpenSearch Configuration
# ============================================================================
OPENSEARCH_INITIAL_ADMIN_PASSWORD=OpenSearch2024!@#

# ============================================================================
# OAuth/Hydra Configuration
# ============================================================================
OAUTH_CLIENT_ID=default-client-id
OAUTH_CLIENT_SECRET=default-client-secret

# ============================================================================
# Telemetry & Logging Configuration
# ============================================================================
TRACE_ENABLED=false
LOG_LEVEL=info
GOPRIVATE=github.com/kweaver-ai/*
